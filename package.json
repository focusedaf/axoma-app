{
  "name": "axoma-app",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "cd renderer && npm run dev",
    "dev:electron": "wait-on tcp:3000 && npm run build:electron && electron .",
    "build:electron": "tsc",
    "build": "npm run build:electron && cd renderer && npm run build"
  },
  "dependencies": {
    "concurrently": "^9.2.1",
    "electron": "^40.6.0",
    "wait-on": "^9.0.4"
  },
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/node": "^25.3.0",
    "cross-env": "^10.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
